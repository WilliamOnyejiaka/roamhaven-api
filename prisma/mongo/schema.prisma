generator client {
    provider = "prisma-client-js"
    output   = "../../node_modules/@prisma-mongo/client"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGODB_URI")
}

model Notification {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    userId    Int
    type      String
    channel   String
    content   String
    status    String
    priority  Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
